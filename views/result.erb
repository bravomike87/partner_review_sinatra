<% # Advertiser oder Publisher %>
<% if params[:relationship] == "advertiser" %>
  <% relationship = "Advertiser" %>
  <% else %>
  <% relationship = "Publisher" %>
<% end %>

<% # Berechung des absoluten Fehlers %>
<% partner_count = params[:partner_count].to_i %>
<% tideri_count = params[:tideri_count].to_i %>
<% abs_fehler = tideri_count - partner_count %>

<% # Berechnung des relativen Fehlers %>
<% rel_fehler = abs_fehler.to_f / tideri_count * 100 %>

